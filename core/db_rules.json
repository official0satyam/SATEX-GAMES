
// FIRESTORE RULES
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

/* ====================================================== */

// REALTIME DATABASE RULES (If enabled)
{
  "rules": {
    ".read": true,
    ".write": true
  }
}
